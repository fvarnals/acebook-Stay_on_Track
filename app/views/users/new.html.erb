<div class='signup' >
  <%= form_for @user do |form| %>
  <%= form.text_field :username, class: 'input', placeholder: 'Username', required: true %>
  <%= form.text_field :name, class: 'input', placeholder: 'Name', required: true %>
  <%= form.email_field :email, class: 'input', placeholder: 'Email', required: true %>
  <%= form.password_field :password, class: 'input', placeholder: 'Password', required: true %>
  <%= form.submit 'Sign Up' %>
  <% end %>
</div>
